<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="FreezerAuditTrailReport"
              pageWidth="842"
              pageHeight="595"
              orientation="Landscape"
              columnWidth="802"
              leftMargin="20"
              rightMargin="20"
              topMargin="20"
              bottomMargin="20"
              uuid="freezer-audit-trail-report">

    <!-- Parameters -->
    <parameter name="reportTitle" class="java.lang.String"/>
    <parameter name="labName" class="java.lang.String"/>
    <parameter name="startDate" class="java.lang.String"/>
    <parameter name="endDate" class="java.lang.String"/>
    <parameter name="complianceFooter" class="java.lang.String"/>

    <!-- Fields from FreezerAuditTrailReportData bean -->
    <field name="eventId" class="java.lang.String"/>
    <field name="timestamp" class="java.lang.String"/>
    <field name="freezerName" class="java.lang.String"/>
    <field name="eventType" class="java.lang.String"/>
    <field name="description" class="java.lang.String"/>
    <field name="performedBy" class="java.lang.String"/>
    <field name="severity" class="java.lang.String"/>
    <field name="status" class="java.lang.String"/>

    <!-- Page Header -->
    <pageHeader>
        <band height="100">
            <textField>
                <reportElement x="0" y="0" width="802" height="20" uuid="lab-name"/>
                <textElement textAlignment="Center">
                    <font size="14" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{labName}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="0" y="25" width="802" height="20" uuid="report-title"/>
                <textElement textAlignment="Center">
                    <font size="12" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{reportTitle}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="0" y="50" width="802" height="20" uuid="date-range"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA["Date Range: " + $P{startDate} + " to " + $P{endDate}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="650" y="75" width="150" height="20" uuid="print-date"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA["Printed: " + new java.text.SimpleDateFormat("yyyy-MM-dd HH:mm").format(new java.util.Date())]]></textFieldExpression>
            </textField>
        </band>
    </pageHeader>

    <!-- Column Header -->
    <columnHeader>
        <band height="30">
            <staticText>
                <reportElement x="0" y="0" width="90" height="30" uuid="header-event-id"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"><font isBold="true"/></textElement>
                <text><![CDATA[Event ID]]></text>
            </staticText>
            <staticText>
                <reportElement x="90" y="0" width="120" height="30" uuid="header-timestamp"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"><font isBold="true"/></textElement>
                <text><![CDATA[Timestamp]]></text>
            </staticText>
            <staticText>
                <reportElement x="210" y="0" width="120" height="30" uuid="header-freezer"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"><font isBold="true"/></textElement>
                <text><![CDATA[Freezer]]></text>
            </staticText>
            <staticText>
                <reportElement x="330" y="0" width="100" height="30" uuid="header-event-type"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"><font isBold="true"/></textElement>
                <text><![CDATA[Event Type]]></text>
            </staticText>
            <staticText>
                <reportElement x="430" y="0" width="200" height="30" uuid="header-description"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"><font isBold="true"/></textElement>
                <text><![CDATA[Description]]></text>
            </staticText>
            <staticText>
                <reportElement x="630" y="0" width="100" height="30" uuid="header-performed-by"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"><font isBold="true"/></textElement>
                <text><![CDATA[Performed By]]></text>
            </staticText>
            <staticText>
                <reportElement x="730" y="0" width="72" height="30" uuid="header-status"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"><font isBold="true"/></textElement>
                <text><![CDATA[Status]]></text>
            </staticText>
        </band>
    </columnHeader>

    <!-- Detail Band -->
    <detail>
        <band height="20">
            <textField isStretchWithOverflow="true">
                <reportElement x="0" y="0" width="90" height="20" uuid="data-event-id"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{eventId}]]></textFieldExpression>
            </textField>
            <textField isStretchWithOverflow="true">
                <reportElement x="90" y="0" width="120" height="20" uuid="data-timestamp"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{timestamp}]]></textFieldExpression>
            </textField>
            <textField isStretchWithOverflow="true">
                <reportElement x="210" y="0" width="120" height="20" uuid="data-freezer"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Left" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{freezerName}]]></textFieldExpression>
            </textField>
            <textField isStretchWithOverflow="true">
                <reportElement x="330" y="0" width="100" height="20" uuid="data-event-type"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{eventType}]]></textFieldExpression>
            </textField>
            <textField isStretchWithOverflow="true">
                <reportElement x="430" y="0" width="200" height="20" uuid="data-description"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Left" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{description}]]></textFieldExpression>
            </textField>
            <textField isStretchWithOverflow="true">
                <reportElement x="630" y="0" width="100" height="20" uuid="data-performed-by"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Left" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{performedBy}]]></textFieldExpression>
            </textField>
            <textField isStretchWithOverflow="true">
                <reportElement x="730" y="0" width="72" height="20" uuid="data-status"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{status}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <!-- Page Footer -->
    <pageFooter>
        <band height="40">
            <textField>
                <reportElement x="0" y="0" width="802" height="20" uuid="compliance-footer"/>
                <textElement textAlignment="Center">
                    <font size="8" isItalic="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{complianceFooter}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="0" y="20" width="200" height="20" uuid="page-number"/>
                <textElement textAlignment="Left"/>
                <textFieldExpression><![CDATA["Page " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>

</jasperReport>

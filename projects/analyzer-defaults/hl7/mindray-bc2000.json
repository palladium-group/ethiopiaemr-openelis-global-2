{
  "$schema": "https://openelis-global.org/schemas/analyzer-defaults/1.0",
  "analyzer_name": "Mindray BC2000",
  "manufacturer": "Mindray",
  "category": "HEMATOLOGY",
  "protocol": { "name": "HL7", "version": "2.3.1" },
  "identifier_pattern": "MINDRAY.*BC.?2000",
  "transport": ["TCP/IP"],
  "transport_config": {
    "TCP/IP": { "default_port": 5001, "framing": "MLLP" }
  },
  "msh3_pattern": "MINDRAY",
  "default_test_mappings": [
    {
      "obx_identifier": "WBC",
      "test_name_hint": "White Blood Cells",
      "loinc": "6690-2",
      "unit": "10^3/uL"
    },
    {
      "obx_identifier": "RBC",
      "test_name_hint": "Red Blood Cells",
      "loinc": "789-8",
      "unit": "10^6/uL"
    },
    {
      "obx_identifier": "HGB",
      "test_name_hint": "Hemoglobin",
      "loinc": "718-7",
      "unit": "g/dL"
    },
    {
      "obx_identifier": "HCT",
      "test_name_hint": "Hematocrit",
      "loinc": "4544-3",
      "unit": "%"
    },
    {
      "obx_identifier": "PLT",
      "test_name_hint": "Platelet Count",
      "loinc": "777-3",
      "unit": "10^3/uL"
    }
  ],
  "notes": "Requires MLLP framing (0x0B start, 0x1C 0x0D end). MSH-3 sending application = 'MINDRAY'. Protocol identical to BC-5380. Existing Mindray plugin also works as legacy fallback."
}
